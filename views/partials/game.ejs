<div class="p-4">
    <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
        <div class="p-6">
            <!-- Categories -->
            <h2 class="tracking-widest text-sm title-font font-medium text-gray-400 mb-1">
              <%= game.genres.join(", ") %>
            </h2>
            <!-- Title -->
            <h1 class="title-font text-xl font-medium text-gray-900 mb-3">
              <%= game.title %>
            </h1>
            <!-- Data -->
            <ul class="leading-relaxed mb-3 list-none">
              <li> Release Date: <%= game.date %> </li>
              <li> Developers: <%= game.developers %> </li>
              
              <% if (game.esrb_rating != "") { %>
                <li> ESRB Rating: <%= game.esrb_rating %> </li>
              <% } %>

              <% if (game.meta_score != null) { %>
                <li> Meta Score: <%= game.meta_score %>/100 </li>
              <% } %>

              <% if (game.user_score != null) { %>
                <li> User Score: <%= game.user_score %>/10 </li>
              <% } %>

              <% if (game.platform != "") { %>
                <li> Platform: <%= game.platform %> </li>
              <% } %>


            </ul>
            <!-- Learn more tab -->
            <div class="flex items-center flex-wrap">
                <a class="text-red-500 inline-flex items-center md:mb-2 lg:mb-0">Learn More
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                </svg>
                </a>
            </div>
        </div>
    </div>
</div> 